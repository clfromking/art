/* pages/my/my.wxss */
image{
  width:0;
  height: 0;  
}
/* 头部 */
.lq-headbox{
  padding: 30rpx;
  height:100rpx;
  border-bottom:2rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}
.lq-headbox .h-pic{
  width:100rpx;
  height: 100%;
  margin-right: 20rpx;
  border-radius: 50%;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.2);
  overflow: hidden;
}
.lq-headbox .h-name{
  flex: 2;
  font-size: 28rpx;
	font-weight: 500;
	color: #111111;
}
.lq-headbox .h-set image{
  display: block;
  width:41rpx;
  height:41rpx;
}
/* 导航栏 */
.lq-nav{
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  background: #fff;
}
.lq-nav .n-li{
  width: 33.3%;
  font-size: 24rpx;
	color: #111111;
  text-align:center;
  border-right: 1rpx solid #e9e9e9;
}
.lq-nav .n-li:last-child{
  border-right: 0;
}
.lq-nav .n-li text{
  display: block;
  font-size: 50rpx;
	font-weight: 600;
	color: #cbaa7c;
}
/* 礼物篮 */
.lq-giftbox .g-tit{
  text-align: center;
  padding: 40rpx 0 20rpx;
  font-size: 30rpx;
	font-weight: 600;
	color: #999999;
}
/* 没有礼物 */
.lq-giftbox .nothing{
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}
.lq-giftbox .nothing image{
  display: block;
  margin: 50rpx auto 0;
  width: 280rpx;
  height: 234rpx;
}
.lq-giftbox .nothing text{
  display: block;
  margin: 30rpx auto 45rpx;
}
.lq-giftbox .nothing navigator{
  margin: 0 auto;
  width: 300rpx;
  border-radius: 40px;
	border: solid 2px #da0202;
  line-height: 80rpx;
  color: #da0202;
  font-size: 28rpx;
	font-weight: 500;
}
/* 礼物列表区 */
.g-main{
  padding: 0 30rpx 88rpx;
}
/* 全选栏 */
.g-main .g-m-all{
  font-size: 24rpx;
	color: #999999;
  margin-bottom: 30rpx;
}
.g-main .g-m-all text{
  display: inline-block;
  margin-left: 16rpx;
}
/* 选项按钮 */
.g-main .g-m-icon{
  float: left;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%; 
  border: 2rpx solid #999999;
  background-color: transparent;
}
.g-main .g-m-all.active{
  color: #da0202;
}
.g-main .g-m-all .g-m-icon{
  margin-left: 20rpx;
}
.g-main .g-m-all.active .g-m-icon,.g-m-item .g-m-check.active .g-m-icon{
  border-color: #da0202;
  color: #d0021b;
  background: url('https://pic.forunart.com/artgive/wx/personal_gift_icon_select.png') no-repeat center;
  background-size: cover;
}
/* 礼物列表 */
.g-m-item{
  height: 292rpx;
  margin-bottom: 30rpx;
  border-radius: 4rpx;
	background-color: #ffffff;
	box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.1);
  overflow: hidden;
}
.g-m-item .g-m-check{
  float: left;
  width: 10%;
  height: 100%;
  padding: 130rpx 20rpx 0;
  border-right: solid 1px #e9e9e9;
  box-sizing: border-box;
}
.g-m-item .g-m-head{
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e9e9e9;
}
.g-m-item .g-m-head image{
  width: 50rpx;
	height: 50rpx;
  margin-right: 18rpx;
  border-radius: 50%;
}
.g-m-item .g-m-h-name{
  flex: 2;
	font-weight: 500;
	color: #111111;
}
.g-m-item .g-m-h-time{
	color: #999999;
} 
.g-m-item .g-m-info{
  width: 90%;
  display: flex;
}
.g-m-item .g-m-info image{
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 20rpx 0 10rpx;
}
.g-m-item .g-m-con{
  flex: 2;
  padding-top: 26rpx;
  font-size: 28rpx;
	font-weight: 500;
	color: #111111;
  position: relative;
}
.g-m-item .g-m-con .g-m-des{
  display: inline-block;
  font-size: 22rpx;
	font-weight: 500;
	color: #999999;
}
.g-m-item .g-m-con .g-m-numbox{
  width: 100%;
  line-height:50rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index:1;
}
.g-m-item .g-m-con .g-m-numedit{
  height: 50rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center; 
  text-align: center;
  font-size: 26rpx;
	font-weight: 600;
	color: #333333;
  border: solid 2rpx #f2f2f2;
}
.g-m-item .g-m-con .g-m-numedit view{
  width: 78rpx;
}
.g-m-item .g-m-con .g-m-numedit input{
  width: 78rpx;
  border-left: solid 2rpx #f2f2f2;
  border-right: solid 2rpx #f2f2f2;
}
/* 操作选项 */
.lq-giftbox .g-callphone{
  width: 72rpx;
	height: 72rpx;
  border-radius: 50%;
	background: #fff url('https://pic.forunart.com/artgive/wx/personal_icon_call.png') no-repeat center;
  background-size: cover;
	box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.2);
  position: fixed;
  bottom: 20rpx;
  right: 30rpx;
  z-index:2;
}
.lq-giftbox .g-operate-box{
  width: 100vw;
  height: 88rpx;
  border-top: solid 2rpx #e9e9e9;
  display: flex;
  justify-content: space-around;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index:2;
}
.lq-giftbox .g-operate-box view{
  line-height: 88rpx;
}


