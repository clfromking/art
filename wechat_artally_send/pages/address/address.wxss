/* pages/address/address.wxss */
.lq-address .a-li{
  font-size: 24rpx;
  color: #999999;
  background: #fff;
  margin-bottom: 20rpx;
}
.lq-address .a-li .a-l-top{
  font-size: 28rpx;
	font-weight: 500;
	color: #111111;
  padding: 30rpx;
}
.lq-address .a-li .a-l-name{
  margin-right: 50rpx;
}
.lq-address .a-li .a-l-info{
  display: block;
  margin-top: 20rpx;
  color: #999999;
  font-size: 24rpx;
  font-weight: normal;
}
.lq-address .a-li .a-l-editbox{
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e9e9e9;
}
.lq-address .a-li .a-l-icon{
  float: left; 
  width: 22rpx;
  height: 22rpx;
  margin-top: 4rpx;
  margin-right: 10rpx;
  border-radius: 50%; 
  border: 2rpx solid #999999;
  background-color: transparent;
}
.lq-address .a-l-editbox .fl.active .a-l-icon{
  border-color: #da0202;
  color: #d0021b;
  background: url('https://pic.forunart.com/artgive/wx/personal_gift_icon_select.png') no-repeat center;
  background-size: cover;
}
.lq-address .a-l-editbox .a-l-del,.lq-address .a-l-editbox .a-l-edit{
  padding-left: 40rpx;
  background: transparent url('https://pic.forunart.com/artgive/wx/address_icon_delete.png') no-repeat left;
  background-size: 30rpx 28rpx;
}
.lq-address .a-l-editbox .a-l-edit{
  margin-right: 60rpx;
  background-image: url('https://pic.forunart.com/artgive/wx/address_icon_edit.png');
}
.lq-address .nothing{
  font-size: 26rpx;
	color: #999999;
  text-align: center;
}
/* 新增地址按钮 */
.lq-address .newaddress button{
  width: 690rpx;
	height: 80rpx;
  margin: 0 auto;
	border-radius: 40rpx;
	background-color: #da0202;
	box-shadow: 0 2rpx 15rpx 0 rgba(218, 2, 2, 0.66);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 20rpx;
  font-size: 28rpx;
	font-weight: 500;
	color: #ffffff;
}









