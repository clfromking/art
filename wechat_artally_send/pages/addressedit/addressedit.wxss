/* pages/addressedit/addressedit.wxss */
.lq-addedit{
  background: #fff;
  font-size: 28rpx;
	color: #333333;
}
.lq-addedit .ae-icon{
  width: 40rpx;
	height: 40rpx;
  background: transparent no-repeat center;
  background-size: contain;
}
.lq-addedit .ae-name .ae-icon{
  background-image: url('https://pic.forunart.com/artgive/wx/address_icon_contacts.png');
}
.lq-addedit .ae-area .ae-icon{
  background-image: url('https://pic.forunart.com/artgive/wx/address_icon_location.png');
}
.lq-addedit .ae-li{
  line-height: 90rpx; 
  padding: 0 30rpx;
  border-bottom: solid 1rpx #e9e9e9;
  display: flex;
  align-items: center; 
}
.lq-addedit .ae-li text{
  width: 142rpx;
}
.lq-addedit .ae-li input,.lq-addedit .ae-li picker,.lq-addedit .ae-li .picker{
  flex: 2;
  height: 90rpx;
  line-height: 90rpx;
}
.lq-addedit .ae-li.area{
  display: block;
}
.lq-addedit .ae-li.area textarea{
  width: 548rpx;
	height: 153rpx;
  margin: 25rpx 0;
  line-height: 1;
}
.lq-addedit .ae-li.default text{
  flex: 2;
}
.lq-addedit .ae-li .ae-switch{
   zoom: .8;
   width:76rpx;
}
.lq-addedit .a-savebtn{
  width: 690rpx;
	height: 80rpx;
  line-height: 80rpx;
	border-radius: 40rpx;
	background-color: #da0202;
	box-shadow: 0 2rpx 15rpx 0 rgba(218, 2, 2, 0.66);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 20rpx;
  margin: 0 auto;
  font-size: 28rpx;
	font-weight: 500;
	color: #ffffff;
}













