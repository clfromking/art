<!--pages/mygifts/mygifts.wxml-->
<wxs src="../../utils/filter.wxs" module="filter" />
<view class='lq-gifts'>
<!-- 导航栏 -->
  <view class='g-nav'>
    <view wx:for="{{navlist[titleIndex]}}" wx:key="{{index}}" class="{{navIndex==index?'active':''}}" data-index="{{index}}" bindtap='chooseNav'>{{item}}</view>
  </view>
  <!-- 单个 -->
  <view class='g-li' wx:for="{{orderlist}}" wx:key="{{index}}">
    <!-- 顶部订单编号 -->
    <view class='g-l-top'>
      <text>订单编号  {{item.number}}</text>
      <view class='g-l-icon' wx:if="{{titleIndex!=0}}"></view>
      <text class='status'>{{item.waydate}}</text>
    </view>
    <!-- 中间详情 -->
    <view class='g-l-cen'>
      <view class='g-l-pic'>
        <image mode='aspectFit' src="{{item.image}}"></image>
      </view>
      <!-- 基本样式 -->
      <view class='g-l-info' wx:if="{{titleIndex!=0 || (titleIndex==0&&navIndex==0)}}">
        <view class='bold'>{{item.name}}</view>
        <view class='thin'>x{{item.num}}</view>
        <view class='bold'>{{filter.currency(item.price)}}</view>
        <view class='thin' wx:if="{{titleIndex==0&&navIndex==0}}">提货时间 {{item.updatetime}}</view> 
      </view>
      <!-- 已折现 -->
      <view class='g-l-info' wx:if="{{titleIndex==0&&navIndex==1}}">
        <view class='bold'>{{item.name}}</view>
        <view class='thin'>x{{item.num}}</view>
        <view>
          <text class='bold'>折现价 {{filter.currency(item.price)}}</text>
          <text> 原价 {{filter.currency(item.price)}}</text>
        </view>
        <view class='thin'>申请时间 {{item.updatetime}} 预计3-5天到账）</view> 
      </view>
    </view>
    <!-- 底部送礼人 -->
    <view class='g-l-bot clear' wx:if="{{titleIndex!=1}}">
      <!-- 我收到的显示 -->
      <view wx:if="{{titleIndex==0}}">
        <view class='g-l-b-pic fl'>
          <image mode='aspectFit' src="{{item.avatar}}"></image>
        </view>
        <view class='time'>{{item.createtime}} 收到 {{item.uname}} 的礼物</view>
      </view>
      <!-- 我参与的显示 -->
      <view wx:if="{{titleIndex==2}}">
        <view class='time'>你好送出  2018.10.23  12:00 开奖 </view>
      </view>
    </view>
  </view>
</view>
