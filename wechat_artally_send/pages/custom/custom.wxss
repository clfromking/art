
.jw-custom-banner{
  width: 100%;
  /* height: 280rpx; */
  margin-top: 20rpx;
  display: block
}
.jw-call-custom{
  background: #da0202;
  color: #fff;
  width: 600rpx;
  margin: 30rpx auto 0;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}
.jw-questions{
  margin-top:20rpx;
  /* height: 500rpx; */
  background: #fff
}
.jw-questions-el{
  height: 160rpx;
  /* background: red; */
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
}
.jw-questions-el:nth-child(3){
  height: 200rpx;
}
.jw-questions-el:nth-child(3) .jw-question-icon{
  margin-top:40rpx;
}
.jw-question-left{
  height: 100%;
}
.jw-question-left{
  width: 150rpx;
  /* background: red */
}
.jw-question-right{
  flex: 2;
  width: 520rpx;
  font-size: 26rpx;
  color:#333;
  margin: 0 30rpx;
  letter-spacing: 1rpx;
  text-align: justify;
}
.jw-question-icon{
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  margin-left: 35rpx;
  display: block;
  margin-top: 20rpx;
  border-radius: 50%
}
.jw-question-name{
  display: block;
  text-align: center;
  font-size: 26rpx;
  margin-top: 10rpx;
}
.jw-question-bottom{
  height: 60rpx;
  text-align: center;
  font-size: 18rpx;
  vertical-align: bottom;
  line-height: 90rpx
}
.g-callphone{
  width: 72rpx;
	height: 72rpx;
  border-radius: 50%;
	background:transparent url('https://pic.forunart.com/artgive/wx/personal_icon_call1.png') no-repeat center;
  background-size: cover;
  position: fixed;
  bottom: 20rpx;
  right: 30rpx;
  z-index:2;
}
