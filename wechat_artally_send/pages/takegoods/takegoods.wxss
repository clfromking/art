/* pages/takegoods/takegoods.wxss */
.lq-takegoods .t-chooseadd{
  background: #fff url('https://pic.forunart.com/artgive/wx/personal_gift_img_address.jpg') no-repeat bottom;
  background-size: 100% 8rpx;
  font-size: 28rpx;
	font-weight: 500;
	color: #111111;
  padding: 30rpx;
  display: flex;
  align-items: center;
}
.lq-takegoods .t-chooseadd .t-icon{
  width: 32rpx;
	height: 41rpx;
  float: left;
  margin-right: 20rpx;
	background: transparent url('https://pic.forunart.com/artgive/wx/address_icon_location.png') no-repeat center;
  background-size: contain;
}
.lq-takegoods .t-chooseadd .nothing{
  margin: 30rpx 0;
}
.lq-takegoods .t-chooseadd .nothing,.lq-takegoods .t-chooseadd .t-addinfo{
  flex: 2;
}
.lq-takegoods .t-chooseadd .t-nexticon{
  width: 10rpx;
	height: 20rpx;
	background: transparent url('https://pic.forunart.com/artgive/wx/all_icon_choice.png') no-repeat center;
  background-size: contain;
}
.lq-takegoods .t-addinfo .t-name{
  margin-right: 50rpx;
}
.lq-takegoods .t-addinfo .t-info{
  display: block;
  margin-top: 20rpx;
  color: #999999;
  font-size: 24rpx;
}
/* 商品栏 */
.lq-takegoods .t-li{
  margin: 30rpx 30rpx 0;
  border-radius: 4rpx;
	background-color: #ffffff;
	box-shadow: 0 0 8rpx 0 rgba(0, 0, 0, 0.1);
}
.lq-takegoods .t-l-cen{
  padding: 10rpx 20rpx 0;
  display: flex;
  align-items: center;
}
.lq-takegoods .t-l-pic{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.lq-takegoods .t-l-pic image{
  width: 200rpx;
  height: 200rpx;
}
.lq-takegoods .t-l-info{
  font-size: 26rpx;
	font-weight: 500;
	color: #111111;
  line-height: 2;
}
.lq-takegoods .t-l-info .num{
  font-size: 22rpx;
	font-weight: 500;
	color: #999999;
}
.lq-takegoods .t-l-bot{
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
	color: #999999;
  border-top: 1rpx solid #e9e9e9;
}
/* 确认按钮 */
.lq-takegoods .t-okbtn{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 20rpx;
  width: 690rpx;
  height: 80rpx;
	border-radius: 40rpx;
	background-color: #da0202;
	box-shadow: 0 2rpx 15rpx 0 rgba(218, 2, 2, 0.66);
  margin: 0 auto;
  font-size: 28rpx;
	font-weight: 500;
	color: #ffffff;
}





