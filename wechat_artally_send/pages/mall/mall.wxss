/* pages/mall/mall.wxss */
page{
  background: #fff;
  /* padding-bottom: 211rpx; */
  position: relative
}
scroll-view{
  /* padding-bottom: 137rpx; */
  height: calc(100vh - 88rpx)
}
.jw-banner-swiper{
  height: 310rpx;
  margin: 0
}
.swiper_block_view{
  position: absolute;
  top:240rpx;
  height: 3rpx;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 9
}

.swiper_block_view text{
  float: left;
  display: block;
  margin-right: 20rpx;
  width: 15rpx;
  height: 3rpx;
  
}
.swiper_block_view text:last-child{
  margin-right: 0
}
.swiper_texts{
  background: #95968d
}
.select_swiper{
  background: #fff
}
.jw-mall-banner{
  height: 310rpx;
  display: block;
  width: 100%
}
.jw-search-view{
  width: 670rpx;
  height: 64rpx;
  margin: -60rpx auto;
  border-radius: 32rpx;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.2);
  background-color: #ffffff;
  border: solid 3rpx #cbaa7c;
  position: absolute;
  top: 310rpx;
  left: 40rpx
}
.jw-search-icon{
  width: 26rpx;
  height: 26rpx;
  display: block;
  float: left;
  margin-left: 25rpx;
  margin-top: 20.5rpx
}
.jw-search-input{
  /* width: 520rpx; */
  height: 64rpx;
  display: block;
  float: right;
  font-size: 26rpx;
  color: #999;
  line-height: 64rpx
}
.jw-search-cancel{
  float: right;
  font-size: 26rpx;
  color: #999;
  height: 100%;
  /* display: block; */
  line-height: 64rpx;
  margin-right: 33rpx; 
}
swiper{
  /* margin-top: 64rpx; */
  height: 464rpx;
  
}
.jw-swiper-main-view{
  width: 670rpx;
  margin: 40rpx auto 0;
  max-height: 424rpx
}
.jw-el-view{
  display: inline-block;
  width: 124rpx;
  height: 167rpx;
  margin-right: 58rpx;
  margin-bottom: 20rpx
}
.jw-el-view:nth-child(4n){
  margin-right: 0
}
.jw-el-mainImg{
  width: 124rpx;
  height: 124rpx;
  display: block
}
.jw-el-otherImg{
  width: 90rpx;
  height: 33rpx;
  display: block;
  margin: -18rpx auto
}
.jw-el-alts{
  font-size: 24rpx;
  color: #111;
  display: block;
  text-align: center;
  margin-top: 16rpx
}
.jw-screen-title-view{
  width: 670rpx;
  margin: 20rpx auto 0;
  height: 73.5rpx
}
.jw-screen-title-img{
  width: 100%;
  height: 100%
}
.jw-ware-list-view{
  width: 670rpx;
  margin:70rpx auto 0;
}
.jw-el-ware{
  width: 325rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.jw-el-ware:nth-child(2n){
  margin-right: 0
}
.jw-el-ware-img{
  width: 323rpx;
  height: 323rpx;
  border: solid 1px #e9e9e9;
  box-sizing: border-box
}
.jw-ware-alt{
  margin-top: 16rpx;
  display: block;
  text-align: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #111
}
.jw-ware-money{
  font-size: 22rpx;
  font-weight: 600;
  color: #da0202;
  text-align: center;
  display: block;
  margin-top: 6rpx;
  margin-bottom: 40rpx
}
.jw-bottom-hint{
  display: block;
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin: 137rpx 0 0;
}



.jw-bottom-view{
  position: fixed;
  width: 100%;
  height: 88rpx;
  background:#fff;
  bottom: 0;
  border-top: 1rpx solid #e9e9e9
}
.jw-bottom-btns{
  display: block;
  float: left;
  width: 375rpx;
  height: 100%;

}
.jw-bottom-icon{
  width: 33.7rpx;
  height: 30.2rpx;
  margin:20rpx auto 0;
  display: block
}
.jw-bottom-alt{
  display: block;
  text-align: center;
  font-size: 20rpx;
  color: #da0202;
  margin-top: 6.8rpx
}
.jw-bottom-rightAlt{
  color:#999
}