/* pages/instructions/instructions.wxss */
page{
  background: #fff;
}
.lq-instructions .head{
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
.lq-instructions .head image{
  width: 100%;
  height: 200rpx;
}
.lq-instructions .head .bold{
  line-height: 3;
  font-weight: bold;
  font-size: 30rpx;
}
.lq-instructions .main{
  padding: 30rpx;
  border-top: 1rpx solid #e5e5e5;
}
.lq-instructions .m-tit{
  font-size: 36rpx;
  line-height: 3;
  font-weight: bold;
}
.lq-instructions .m-con{
  padding-left: 40rpx;
  margin-bottom: 30rpx;
  color: #666;
  font-size: 34rpx;
  text-align: justify;
}
.lq-instructions .m-con image{
  width: 100%;
  margin: 30rpx 0;
  border:1rpx solid #e5e5e5;
}
.lq-instructions .m-con text{
  text-align: left;
  display:inline-block;
}
.lq-instructions .m-t-icon{
  display: inline-block;
  width: 34rpx;
  height: 40rpx;
  padding-left: 6rpx;
  margin-right: 20rpx;
  text-align: center;
  line-height: 40rpx;
  color: #fff;
  background: transparent url('https://pic.forunart.com/artgive/wx/shiyongshuoming_1@3x.png') no-repeat center;
  background-size: cover;
}
.lq-instructions .m-c-subtit{
  color: #333;
  line-height: 2;
}
