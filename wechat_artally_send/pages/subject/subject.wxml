<!--pages/subject/subject.wxml-->
<image mode='widthFix' src='{{title_img_src}}' class='jw-title-img'></image>
<view class='jw-ware-list-view'>
  <view wx:for='{{ware_list}}' data-id='{{item.id}}' bindtap='goDetail' wx:key='{{item}}' class='jw-el-ware'>
    <view class='jw-el-ware-img'>
      <view style='width:100%;height:100%'>
        <image mode="aspectFit" style="width:100%;height:100%;display:block" src='{{item.image}}'></image>
      </view>
    </view>
    <text class='jw-ware-alt ellipsis'>{{item.name}}</text>
    <text class='jw-ware-money ellipsis'>￥{{item.price}}</text>
  </view>
</view>
<text class='jw-bottom-hint'>没有更多了...</text>
