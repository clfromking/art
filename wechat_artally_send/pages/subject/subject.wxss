/* pages/subject/subject.wxss */
page{
  background: #fff;
  border-top: 1rpx solid #e9e9e9;
  padding-bottom: 211rpx
}
.jw-title-img{
  width: 100%;
  /* height: 155rpx; */
  display: block;
  margin: 40rpx 0
}
.jw-ware-list-view{
  width: 670rpx;
  margin:40rpx auto 0;
}
.jw-el-ware{
  width: 325rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.jw-el-ware:nth-child(2n){
  margin-right: 0
}
.jw-el-ware-img{
  width: 323rpx;
  height: 323rpx;
  border: solid 1px #e9e9e9;
}
.jw-ware-alt{
  margin-top: 16rpx;
  display: block;
  text-align: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #111
}
.jw-ware-money{
  font-size: 22rpx;
  font-weight: 600;
  color: #111;
  text-align: center;
  display: block;
  margin-top: 6rpx;
  margin-bottom: 40rpx
}
.jw-bottom-hint{
  display: block;
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin: 137rpx 0 0;
}