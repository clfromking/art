/* pages/components/integral.wxss */
.jw-shade{
  position: fixed;
  width: 100%;
  height: 100%;
  opacity: 0.8;
  background: #000;
  z-index: 9
}
.jw-integral-window{
  width: 560rpx;
  height:535rpx;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 4rpx;
  box-shadow: 0 2rpx 10rpx 0 rgba(72, 0, 0, 0.58);
  background-color: #BE2121;
  z-index: 10
}
.jw-top-window{
  width: 100%;
  height: 370rpx;
  background: #cc2727
}
.jw-line{
  border-top: 3rpx solid #ecc897
}
.jw-bottom-window{
  height: 162rpx;
  position: relative
}
.jw-receive-btn{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 340rpx;
  height: 72rpx;
  border-radius: 8rpx;
  font-family: PingFangSC;
  font-size: 40rpx;
  font-weight: 500;
  line-height: 72rpx;
  text-align: center;
  color: #000000;
  background-image: linear-gradient(to bottom, #f1eadf, #c59870);
}
.jw-top-window text{
  display: block;
  font-family: PingFangSC;
}
.jw-integral-title{
  color: #ecc897;
  font-size: 40rpx;
  font-weight: 500; 
  text-align: center;
  padding-top: 72rpx
}
.jw-integral-num{
  width: 100%;
  text-align: center;
  position: absolute;
  top: 138rpx;
  font-size: 64rpx;
  color: #fff
}
.jw-integral-rule{
  width: 457rpx;
  text-align: left;
  color: #ecc897;
  position: absolute;
  left: 52rpx;
  top: 245rpx;
  font-size: 24rpx
}
.jw-shade-close{
  width: 29.5rpx;
  height: 29.5rpx;
  background: url('https://pic.forunart.com/artgive/wx/x.png') no-repeat;
  background-size: 100% 100%;
  position: absolute;
  top: 24.5rpx;
  right: 24.5rpx
}