/* pages/hintDetail/hintDetail.wxss */
page{
  padding-bottom: 122rpx
}
swiper{
  width: 750rpx;
  height: 750rpx;
  background-color: #ffffff;
}
.jw-detail-img-view{
  width: 100%;
  height: 100%
}
.jw-detail-msgs{
  height: 206rpx;
  background: #fff;
  padding-top: 20rpx;
  box-sizing: border-box
}
.jw-detail-msgs view{
  margin-left: 40rpx
}
.jw-detail-msg-title{
  font-size: 28rpx;
  font-weight: bold;
  color: #111;

}
.jw-detail-msg-alt{
  font-size: 22rpx;
  font-weight: bold;
  color: #999;
  margin-top: 6rpx
}
.jw-detail-msg-money{
  font-size: 28rpx;
  font-weight: bold;
  color: #da0202;
  margin-top: 10rpx
}
.jw-detail-msg-other{
  margin-top: 10rpx
}
.jw-detail-icon{
  width: 22rpx;
  height: 22rpx;
  display: block;
  float: left;
  margin-top: 4rpx
}
.jw-details-text{
  font-size: 22rpx;
  color: #999;
  display: block;
  float: left;
  vertical-align: top;
  margin-left: 11rpx;
  margin-right: 40rpx
}
.jw-detail-main-view{
  margin-top: 20rpx;
  background: #fff
}
.jw-detail-main-title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #111;
  margin-left: 40rpx
}
video{
  height: 504rpx;
  display: block;
  width: 100%
}
.jw-detail-showImg{
  width: 100%;
  height: 574rpx;
  display: block;
  background: aqua;

}
.jw-bottom-view{
  height: 122rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff
}
.jw-buy-btn{
  display: block;
  margin: 22rpx auto 0;
  width: 710rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #da0202;
  box-shadow: 0 2rpx 15rpx 0 rgba(218, 2, 2, 0.66);
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx
}
.jw-beg-gift-view{
  width: 180rpx;
  height: 148.8rpx;
  position: fixed;
  bottom: 200rpx;
  right: 20rpx;
}
.jw-beg-gift-view image{
  display: block;
  width: 100%;
  height: 100%
}
.jw-buy-shade{
  width: 100%;
  height: calc(100% - 663rpx);
  position: fixed;
  background:rgba(0, 0,0,0.5);
  top:0;
}
.jw-buy-msgs{
  width: 100%;
  height: 663rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  z-index: 99
}
.jw-buy-mallImg{
  width: 200rpx;
  height: 200rpx;
  margin-top: 30rpx;
  margin-left: 40rpx;
  position: relative;
  float: left
}
.jw-close-buy{
  float: right;
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
  margin-right: 40rpx;
}
.jw-buy-money,.jw-buy-num{
  display: block;
  /* float: left; */
  /* margin-top: 158rpx; */
  position: absolute;
  left: 260rpx;
  /* width: 100% */
}
.jw-buy-money{
  color: #da0202;
  font-size: 30rpx;
  font-weight: bold;
  top: 158rpx
}
.jw-buy-num{
  bottom: 30rpx;
  color: #999;
  font-size: 22rpx
}
.jw-buy-top-view{
  height: 260rpx;
  width: 100%;
  position: relative;

}
.jw-buy-middle-view{
  height: 168rpx;
  border-top: 1px solid #e9e9e9;
  border-bottom: 1px solid #e9e9e9
}
.jw-spec-title{
  display: block;
  color: #111;
  font-size: 28rpx;
  margin: 30rpx 0 9rpx 40rpx;
  font-weight: bold
}
.jw-spec-btns{
  width: 101rpx;
  height: 50rpx;
  border-radius: 5rpx;
  border: solid 2rpx #f2f2f2;
  margin-left: 40rpx;
  font-size: 24rpx;
  letter-spacing: 0.9rpx;
  color: #111;
  display: inline-block;
  text-align: center;
  line-height: 50rpx
}
.jw-select-prec{
  border-color: #d0021b;
  color: #d0021b
}
.jw-buy-bottom-view{
  height: 110rpx
}
.jw-buy-num-title{
  display: inline-block;
  height: 110rpx;
  line-height: 110rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
  color: #111
}
.jw-suboradd{
  width: 232rpx;
  height: 50rpx;
  margin-top: 30rpx;
  margin-right: 40rpx;
  float: right;
  border-radius: 4rpx;
  border: solid 2rpx #f2f2f2;
}
.jw-suboradd-btns{
  float: left;
  display: block;
  width: 78rpx;
  /* background: #e9e9e9; */
  height: 100%;
  text-align: center
}
.jw-num-input{
  float: left;
  width: 76rpx;
  font-size: 26rpx;
  height: 100%;
  line-height: 52rpx;
  text-align: center;
  letter-spacing: 0.9rpx;
  color: #333;
  border-left: 2rpx solid #f2f2f2;
  border-right: 2rpx solid #f2f2f2;
  box-sizing: border-box
}


.aa{
  position: fixed;
  top: 0;
  height: calc(100% - 663rpx);
  width: 100%
}